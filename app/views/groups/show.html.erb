<h1><%= @group.name %></h1>

<p>
  <strong>Game:</strong>
  <%= @group.game.home_team.name %> vs <%= @group.game.away_team.name %>
</p>


<h2>Members:</h2>
<ul>
  <% @group.users.each do |user| %>
    <li>
      <%= user.name.presence || 'Unnamed User' %>
      <% if current_user == @group.creator %>
        <%= button_to 'Kick', kick_game_group_path(@group.game, @group, user_id: user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= button_to 'Join', join_game_group_path(@group.game, @group), method: :post %>
<%= button_to 'Edit', edit_game_group_path(@group.game, @group), method: :get %>
<%= button_to 'Leave', leave_game_group_path(@group.game, @group), method: :post %>
<%= simple_form_for @group, url: game_group_path(@group.game, @group), method: :delete do |f| %>
  <%= f.button :submit, 'Delete', data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Chatroom', game_group_chatroom_path(@game, @group, @chatroom) %>


<%= link_to 'Back', game_group_path(@group.game, @group) %>
