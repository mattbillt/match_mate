<div style="padding: 20px;">
  <h1 style="font-family: 'Black Ops One'; color: dark; padding: 20px;">Teams</h1>
</div>

<section class="text-newwhite pt-3 pb-1 section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 d-flex align-items-center justify-content-center mb-3">
        <h3 class="mob-md-0" style="margin-bottom: 0; font-family: 'Black Ops One', cursive; color: #333333; font-weight: 300; font-size: 32px; text-align: center;">
          Find a Team
        </h3>
      </div>

      <div class="col-md-12 text-center mb-3" style="padding-left: 10px;">
        <%= form_with url: teams_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type your desired team name"
          %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>

        <style>
          .team-card {
            width: 10rem;
            height: 10rem;
            border: none;
            border-radius: 50%;
            box-shadow: none;
            transition: transform 0.3s;
          }
          .team-card:hover {
            transform: scale(1.05);
          }
          .team-card img {
            object-fit: contain;
            width: 100%;
            height: 100%;
          }
          .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
          }
          .col-md-3 {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 10rem; /* Add a margin to the bottom of each team card */
          }
        </style>

        <div class="container mt-5">
          <div class="row">
            <% @teams.each do |team| %>
              <div class="col-md-3">
                <div class="card mb-4 team-card">
                  <%= link_to team_path(team) do %>
                    <img class="card-img-top" src="<%= team.emblem %>" alt="<%= team.name %>">
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title"><%= team.name %></h5>
                    <p class="card-text">City: <%= team.city %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
