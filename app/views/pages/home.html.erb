<script>
  (function(d, s, id) {
    var js;
    if (d.getElementById(id)) {
      return;
    }
    js = d.createElement(s);
    js.id = id;
    js.src = "https://embedsocial.com/cdn/ht.js";
    d.getElementsByTagName("head")[0].appendChild(js);
  }(document, "script", "EmbedSocialHashtagScript"));

    let images = [
        'https://img.freepik.com/fotos-gratis/retrato-de-fa-de-jogo-de-futebol-aproveitando-a-partida_23-2150860703.jpg',
        'https://img.freepik.com/fotos-gratis/vista-do-torcedor-de-futebol-em-extase-com-rosto-pintado-curtindo-a-partida_23-2150885915.jpg',
        'https://img.freepik.com/fotos-gratis/vista-do-fa-de-futebol-curtindo-a-partida_23-2150860785.jpg',
        'https://img.freepik.com/fotos-gratis/retrato-de-fas-de-jogos-de-futebol-curtindo-a-partida_23-2150885831.jpg',
        'https://img.freepik.com/fotos-gratis/vista-do-fa-de-futebol-curtindo-a-partida_23-2150860633.jpg',
        'https://img.freepik.com/fotos-gratis/jogador-de-futebol-comemorando-a-vitoria_23-2150821520.jpg'
    ];
    let i = 0;

    function createDots() {
        let dots = document.getElementById('dots');
        dots.innerHTML = '';
        for (let j = 0; j < images.length; j++) {
            let dot = document.createElement('span');
            dot.style = 'display: inline-block; width: 10px; height: 10px; margin: 0 5px; background: ' + (j === i ? 'white' : 'rgba(255, 255, 255, 0.5)') + '; border-radius: 50%; cursor: pointer;';
            dot.onclick = function() {
                i = j;
                changeImage();
            };
            dots.appendChild(dot);
        }
    }

    function changeImage() {
        document.getElementById('carouselImage').src = images[i];
        createDots();
        i = (i + 1) % images.length;
    }

    setInterval(changeImage, 7000);
    changeImage();
</script>
