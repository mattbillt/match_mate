      <section class="p-5" style="padding-left: 0;">
        <div class="container">
          <div class="row text-center">
            <% @games.first(5).each do |game| %>
              <div class="col-md-4 mb-4">
                <div class="card bg-newwhite text-primary shadow card-five" style="border-radius: 15px; height: auto; width: 100%;">
                  <div class="card-body d-flex flex-column justify-content-center align-items-center">
