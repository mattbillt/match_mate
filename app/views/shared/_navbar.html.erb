<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #012B4D;">

  <div class="container d-lg-flex align-items-center">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', alt: 'logo', class: 'logo', width: '30' %>
      <% end %>
    </div>
    <a href="<%= root_path %>" class="navbar-title ms-lg-4 me-lg-auto" style="color: #F2F3F4; font-family: 'Black Ops One', cursive; font-size: 30px; text-decoration: none;">Match Mate</a>

    <div class="profile-picture me-2">
      <% if user_signed_in? %>
        <%= link_to profile_path do %>
