<div class="navbar navbar-expand-sm navbar-custom navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <div class="brand-container">
        <%= image_tag "logo.png" %>
        <span style="font-family: 'Black Ops One', cursive; font-size: 30px; color: #F2F3F4;">Match Mate</span>
      </div>
    <% end %>
  </div>
</div>

<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav ms-auto">
    <li class="nav-item <%= 'active' if current_page?(root_path) %>">
      <%= link_to "Home", root_path, class: "nav-link" %>
    </li>
    <%# Assuming you want to list groups for a specific game %>
    <% if defined?(game) && game.present? %>
      <li class="nav-item <%= 'active' if current_page?(game_groups_path(game)) %>">
        <%= link_to "Groups", game_groups_path(game), class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item <%= 'active' if current_page?(games_path) %>">
        <%= link_to "Games", games_path, class: "nav-link" %>
      </li>
    <% end %>
    <li class="nav-item dropdown">
      <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
      </a>
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "Action", "#", class: "dropdown-item" %>
        <%= link_to "Another action", "#", class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </li>
    <li class="nav-item">
      <%= link_to "Login", new_user_session_path, class: "nav-link", style: "color: #F2F3F4;" %>
    </li>
  </ul>
</div>
