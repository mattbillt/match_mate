<style>
  .navbar {
    background: linear-gradient(to left, #012B4D, #001626);
    margin-bottom: 0;
  }

  .navbar-title {
    margin-left: 10px;
    color: #F2F3F4;
    font-family: 'Black Ops One', cursive;
    font-size: 30px;
    text-decoration: none;
  }

  .navbar-title:hover {
    text-decoration: none;
  }

  .navbar-toggler {
    background-color: #F2F3F4;
  }

  .navbar-toggler-icon {
    border-color: #012B4D;
  }

  .profile-picture {
    cursor: pointer;
  }
</style>

<nav class="navbar navbar-expand-md">
  <div class="container d-lg-flex align-items-center">
    <div class="logo">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', alt: 'logo', class: 'logo', width: '30' %>
      <% end %>
    </div>
    <a href="<%= root_path %>" class="navbar-title ms-lg-4 me-lg-auto">Match Mate</a>

    <button class="navbar-toggler d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
      <span class="navbar-toggler-icon custom-toggler"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navmenu">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: "nav-link #{'active' if current_page?(root_path)}", id: 'home-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Games', games_path, class: "nav-link #{'active' if current_page?(games_path)}", id: 'games-link' %>
        </li>

        <li class="nav-item">
          <%#= link_to 'Groups', groups_path, class: "nav-link #{'active' if current_page?(groups_path)}", id: 'groups-link' #%>
        </li>

        <li class="nav-item me-4">
          <% if user_signed_in? %>
            <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-dark-blue' %>
          <% else %>
            <%= button_to 'Login', new_user_session_path, class: 'btn btn-dark-blue' %>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <% if current_user.photo.attached? %>
            <%= link_to profile_path do %>
              <div class="profile-picture me-2 d-md-block">
                <%= image_tag current_user.photo.variant(resize: '30x30'), alt: 'profile picture', class: 'rounded-circle' %>
              </div>
            <% end %>
          <% else %>
            <%= link_to profile_path do %>
              <div class="profile-picture me-2 d-md-block">
                <%= image_tag 'https://placehold.co/40x40', alt: 'placeholder', class: 'rounded-circle', width: '30', height: '30' %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
