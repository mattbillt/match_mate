<div class="container" >

  <div class="align-items-center justify-content-center m-3 text-center">
    <h1 style="margin-bottom: 0; font-family: 'Black Ops One', cursive; color: #333333; font-weight: 300; font-size: 32px;">
    <%="#{@game.home_team.name} vs #{@game.away_team.name}"%>
    </h1>
  </div>
  <div class="row d-flex">
      <div class="col-6">
        <div class="card bg-newwhite text-primary border-primary shadow m-3" style="border-radius: 15px; height: auto; width: 100%;">
          <div class="card-body d-flex justify-content-center align-items-center">
            <div class="container">
              <div class="row">
                <div class="col-3 d-flex justify-content-center align-items-center ">
                  <img src="<%= @game.home_team.emblem %>" class="emblem-image-home" alt="<%= @game.home_team.name %> Image">
                </div>
                <div class="col-6 flex-column justify-content-center align-items-center text-center">
                    <p><%= "Location: #{@game.city}" %></p>
                    <p><%= "Date: #{@game.date}" %></p>
                    <img src="<%= @game.home_team.stadium %>" alt="<%= @game.home_team.stadium %> Image" style="height: 150px; width: 200px;" class="m-3">
                    <h4><%= @game.home_team.stadium_name %></h4>
                    <p><%= @game.home_team.address %></p>
                </div>
                <div class="d-flex col-3 justify-content-center align-items-center ">
                <img src="<%= @game.away_team.emblem %>" class="emblem-image-away" alt="<%= @game.away_team.name %> Image">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="text-center">
        <h3 >Groups</h3>
        </div>
        <div class="row d-flex">
          <% @game.groups.each do |group| %>
            <div class="col-6">
              <div class="card bg-newwhite text-primary border-none shadow m-3" style="border-radius: 15px; height: auto; width: 100%;">
                <div class="card-body text-center flex-column">
                    <p>Name: <strong><%= link_to group.name, game_group_path(@game, group) %></strong></p>
                    <p>Description: <%= group.description %></p>
                    <p># of people: <strong><%= group.users.count%></strong></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="justify-content-center align-items-center text-center">
          <%= link_to 'Create a Group', new_game_group_path(@game), class: "btn btn-warning rounded-pill shadow" %>
        </div>
      </div>
  </div>
  <div class="justify-content-center align-items-center text-center m-3">
   <p> <%= link_to "Back to Index", games_path %></p>
  </div>
</div>
